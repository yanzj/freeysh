#include <reg51.h>
#define uchar usnsiged char

sbit key_jia=P2^0;
sbit key jian=P2^1;
sbit gnd=P2^4;
uchar num;
/* 注意！ 用 code 是把后面的数据存储到程序存储区,如果没有则放在 RAM */
/* 共阳极数码管编码表 */
uchar code table[] = {0xc0,0xf9,0xa4,0xb0,0x99,0x92,0x82,0xf8,
			0x80,0x90,0x88,0x83,0xc6,0xa1,0x86,0x8e};



/* 独立按键加减按键 */

int main(void)
{
	num = 0;
	P0 = tab[num];
	while (1)
	{
		if (key_jia == 0)
		{
			delay_ms(5);	//增强抗干扰能力
			if (key_jia == 0)
			{
				while (!key_jia);	//松手检测
				delay_ms(50);		//消抖延时	
				num++;
				if (num == 16)
					num = 0;
			}
		}
		
		
		
		if (key_jia == 0)
		{
			delay_ms(5);	//增强抗干扰能力
			if (key_jia == 0)
			{
				while (!key_jia);	//松手检测
				delay_ms(50);		//消抖延时	
				num--;
				if (num == -1)
					num = 0;
			}
		}
		
		P0 = tab[num];
		
	}
}

